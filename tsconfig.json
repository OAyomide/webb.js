{
  "extends": "@open-web3/dev-config/config/tsconfig.json",
  "exclude": [
    "build/**/*",
    "**/build/**/*"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@examples/*": [
        "examples/"
      ],
      "@webb-tools/api": [
        "packages/api/src"
      ],
      "@webb-tools/api/*": [
        "packages/api/src/*"
      ],
      "@webb-tools/types": [
        "packages/types/src"
      ],
      "@webb-tools/types/*": [
        "packages/types/src/*"
      ],
      "@webb-tools/type-definitions": [
        "packages/type-definitions/src"
      ],
      "@webb-tools/type-definitions/*": [
        "packages/type-definitions/src/*"
      ],
      "@webb-tools/sdk-core": [
        "packages/sdk-core/src"
      ],
      "@webb-tools/sdk-core/*": [
        "packages/sdk-core/src/*"
      ],
      "@webb-tools/sdk-mixer": [
        "packages/sdk-mixer/src"
      ],
      "@webb-tools/sdk-mixer/*": [
        "packages/sdk-mixer/src/*"
      ]
    },
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@polkadot/ts",
      "./node_modules/@types"
    ]
  }
}
